<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            tools:text="WGP2026 地区大会" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_scores"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#F5F5F5"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/listitem_score" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_add_new_score"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_battle_deck">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_battle_deck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_opponent_deck">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_matching_deck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layout_personal_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_personal_result"
                android:textSize="12sp" />
            <RadioGroup
                android:id="@+id/radio_group_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/label_win" />
                <RadioButton
                    android:id="@+id/radio_lose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_lose" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_team_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_team_result"
                android:textSize="12sp" />
            <RadioGroup
                android:id="@+id/radio_group_team_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/radio_team_3_0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3-0" android:textSize="12sp" />
                <RadioButton android:id="@+id/radio_team_2_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2-1" android:textSize="12sp" android:checked="true" />
                <RadioButton android:id="@+id/radio_team_1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1-2" android:textSize="12sp" />
                <RadioButton android:id="@+id/radio_team_0_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0-3" android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_memo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_score_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
