<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_score_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            tools:text="WGP2026 地区大会" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule_label_add_new_score"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/schedule_hint_battle_deck">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_score_battle_deck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/schedule_hint_opponent_deck">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_score_matching_deck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/layout_score_personal_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/schedule_label_personal_win_lose"
                android:textSize="12sp" />
            <RadioGroup
                android:id="@+id/radio_group_score_personal_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_score_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/schedule_label_win" />
                <RadioButton
                    android:id="@+id/radio_score_lose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_label_lose" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_score_team_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/schedule_label_team_result"
                android:textSize="12sp" />
            <RadioGroup
                android:id="@+id/radio_group_score_team_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/radio_score_team_3_0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/schedule_result_3_0" android:textSize="12sp" />
                <RadioButton android:id="@+id/radio_score_team_2_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/schedule_result_2_1" android:textSize="12sp" android:checked="true" />
                <RadioButton android:id="@+id/radio_score_team_1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/schedule_result_1_2" android:textSize="12sp" />
                <RadioButton android:id="@+id/radio_score_team_0_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/schedule_result_0_3" android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/schedule_hint_memo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_score_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
